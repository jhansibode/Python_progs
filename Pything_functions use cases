1)def month_days(month,days):
    print(month + " has " + str(days) + " days.")
month_days("June" ,"30")
month_days("July" ,"31")



2)def lucky_number(name):
    number = len(name) * 9
    print("Hello " + name + " . Your lucky number is  " + str(number))
lucky_number("jhansi")

